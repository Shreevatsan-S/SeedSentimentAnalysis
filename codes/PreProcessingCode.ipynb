import pandas as pd
import numpy as np
import re
from sklearn.preprocessing import LabelEncoder

# Load the dataset
df = pd.read_csv('seeds.csv')

# Remove duplicates
df.drop_duplicates(inplace=True)

# Remove rows with null values
df.dropna(inplace=True)

# Standardize date format to DD-MM-YYYY
df['Date'] = pd.to_datetime(df['Date'], errors='coerce').dt.strftime('%d-%m-%Y')

# Strip leading/trailing whitespace and convert text columns to lowercase
def clean_string(x):
    if isinstance(x, str):
        return x.strip().lower()
    else:
        return x

df = df.applymap(clean_string)

# Function to clean review text: remove special characters except alphanumeric and spaces
def clean_text(text):
    text = re.sub(r'[^a-zA-Z0-9\s]', '', text)
    # Optionally, implement stopword removal here if needed
    return text

df['Comment'] = df['Comment'].apply(clean_text)

# Encode categorical features for modeling if needed
le_website = LabelEncoder()
df['Website'] = le_website.fit_transform(df['Website'])

le_seedtype = LabelEncoder()
df['Seed Type'] = le_seedtype.fit_transform(df['Seed Type'])

# Gender is labeled as 0, 1, and -1 for unknown manually

# Label is manually assigned (1=Positive, 0=Neutral, -1=Negative)

# After preprocessing, display some info
print("Cleaned Dataset Sample:")
print(df.head())

print("\nDataset info:")
print(df.info())

print("\nLabel distribution:")
print(df['Label'].value_counts())
